<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_color"
        android:layout_marginTop="@dimen/display_margin"
        android:layout_marginEnd="@dimen/display_margin"
        android:layout_marginStart="@dimen/display_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/entertainment_image"
                android:layout_width="@dimen/image_display"
                android:layout_height="match_parent"
                android:src="@drawable/sirleaf"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp">

                <TextView
                    android:id="@+id/entertainment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kavoon"
                    android:text="Ellen Johnson Sirleaf"
                    android:maxLines="2"
                    android:textColor="@color/orange_text_color"
                    android:textSize="@dimen/text_heading"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/entertainment_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:maxLines="2"
                    android:minLines="1"
                    android:textColor="@color/ash_text_color"
                    android:textSize="@dimen/text_size"
                    android:text="Short description about the person whose profile is showed " />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>